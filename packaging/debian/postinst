#/bin/bash

set -e

do_ldconfig() {
    ln -sfn /opt/rocm/hcrng/lib/libhiprng.so /opt/rocm/lib/libhiprng.so
    ln -sfn /opt/rocm/hcrng/lib/libhiprng.so /opt/rocm/lib/libhcrng.so
    echo /opt/rocm/hcrng/lib > /etc/ld.so.conf.d/hcrng-rocm-dev.conf && ldconfig
}

case "$1" in
   configure)
       do_ldconfig
   ;;
   abort-upgrade|abort-remove|abort-deconfigure)
       echo "$1"
   ;;
   *)
       exit 0
   ;;
esac
